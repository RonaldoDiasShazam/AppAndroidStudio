<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aluno.proquinhovoador.Calculadora"
    android:background="#89ffffff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 N:"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/edtNum1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 N:"
        android:id="@+id/textView4"
        android:textSize="30dp"
        android:textIsSelectable="true"
        android:layout_alignBaseline="@+id/edtNum2"
        android:layout_alignBottom="@+id/edtNum2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtNum1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignRight="@+id/edtNum2"
        android:layout_alignEnd="@+id/edtNum2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:id="@+id/txtResultado"
        android:textSize="30dp"
        android:textColor="#ff0011"
        android:layout_below="@+id/edtNum2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtNum2"
        android:layout_below="@+id/edtNum1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Somar"
        android:id="@+id/button"
        android:onClick="adicao"
        android:textSize="25dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:foreground="#ab00fbff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Divisão"
        android:id="@+id/button3"
        android:onClick="divi"
        android:textSize="25dp"
        android:textColor="#000000"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:foreground="#ac00ffff"
        android:layout_above="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="45dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multipicação"
        android:id="@+id/button5"
        android:onClick="multi"
        android:textSize="25dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:layout_below="@+id/txtResultado"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:foreground="#a400fbff"
        android:textColor="#000000" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subtração"
        android:id="@+id/button4"
        android:onClick="sub"
        android:textSize="25dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:forceHasOverlappingRendering="false"
        android:foreground="#b700ffe5"
        android:textColor="#000000" />

</RelativeLayout>
